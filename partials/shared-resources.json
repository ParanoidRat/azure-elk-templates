{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location where resources will be provisioned"
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Storage account used for share virtual machine images"
      }
    }
  },
  "variables": {
    "snapshotStorageName": "essnaprepo",
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('snapshotStorageName')]",
      "apiVersion": "2016-01-01",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": {
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageAccountName')]",
      "apiVersion": "2016-01-01",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": {
      }
    }
  ],
  "outputs": {
    "snapshotStorageAccountKey": {
      "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('snapshotStorageName')), '2015-08-01').primaryKey]",
      "type": "string"
    },
    "snapshotStorageAccountName": {
      "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('snapshotStorageName')).name]",
      "type": "string"
    }
  }
}
